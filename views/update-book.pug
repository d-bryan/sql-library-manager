extends layout.pug

block content
    if errors
            h2.error Oooops!
            ul.error
                each error in errors
                    li=error.message
    h1 Update Book
    - const id = book.id;
    - const title = book.title;
    - const author = book.author;
    - const genre = book.genre;
    - const year = book.year;
    form(method='post', action="/books/" + id)
        p
            label(for='title') Title
            input#title(name='title', type='text', value= title)
        p
            label(for='author') Author
            input#author(name='author', type='text', value= author)
        p
            label(for='genre') Genre
            input#genre(name='genre', type='text', value= genre)
        p
            label(for='year') Year
            input#year(name='year', type='text', value= year)
        p
            input(type='submit', value='Update Book')

    form(method='post', action='/books/' + id + '/delete', onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a.button(href='/books') Cancel
        p
            input(type='submit', value='Delete Book')