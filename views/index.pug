extends layout.pug

block content

    h1 Books

    div(class='search')
            form(method='action', action='/books/search')
                label(for='q') Search:
                input(type='text', name='q', id='q')
                input(type='submit' value='Go')

    p
        a.button(href='/books/new') Create New Book
    
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year

            
        tbody
            each book in books
                tr
                    td
                        - var url = book.id;
                        a(href='/books/' + url)= book.title
                    td= book.author
                    td= book.genre
                    td= book.year
            else
                p There are no books
        
    - var n = 1;
            ul(class='pagination')
                while n <= totalPages
                    li
                        if(n == pageNumber)
                            a(class='active', href='/books/page=' + n)= n++
                        else
                            a(href='/books/page=' + n)= n++